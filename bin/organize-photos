#!/bin/sh

if [ "$#" -ne 1 ] || [ ! -d "$1" ]
then
  echo "Which folder do you want organize photos in?"
  exit 1
fi

dirs=$(find "$1" -type d)

for i in $dirs
do
  read -r -p "Do you want to organize $i? [y/N]" response
  case $response in
    [yY][eE][sS]|[yY]) 
      # jhead -autorot -n%Y%m%d-%H%M%S-%f $i/*
      # exiftool -d "%Y%m%d-%H%M%S%%-c-%%f.%%le" "-testname<CreateDate" "$i"
      exiftool -d "%Y%m%d-%H%M%S%%-c-%%f.%%le" "-filename<CreateDate" "$i"
      ;;
    *)
      echo ""
      ;;
  esac
done
